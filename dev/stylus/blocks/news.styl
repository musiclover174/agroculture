.news
  &__title
    color $dark
    fontify 72px 400 64px
    mb 44px
    @media $lDesktopMedium
      fontify 60px 400 64px
    @media $LandscapeMedium
      fontify 36px 400 42px
    @media $LandscapeMedium
      mb 24px
  &__grid
    display flex
    flex-wrap wrap
    justify-content space-between
    pos relative
    @media $LandscapeMedium
      justify-content flex-start
    &_page
      ml -50px
      w calc(100% + 50px)
      justify-content flex-start
      @media $LandscapeMedium
        ml 0
        w 100%
      & ^[0]__elem
        w calc(25% - 50px)
        ml 50px
        mb 80px
        @media $desktopMax
          w calc(100% / 3 - 50px)
        @media $desktopMin
          w calc(50% - 50px)
          mb 50px
        @media $LandscapeMedium
          w 100%
          ml 0
          & + ^[0]__elem
            mt 0
        &:not(^[0]__elem_wide)
          flex-direction column
          align-items flex-start
          justify-content flex-start
          & ^[0]__elem
            &-side
              w 100%
            &-content
              w 100%
              mt 24px
        &_wide
          w 100%
        &-imgover
          transition-delay 0s !important
          &.visible
            w 100%
          @media $LandscapeMedium
            db()
        &:nth-child(1) .news__elem-imgover
          transition-delay 1s
        &:nth-child(2) .news__elem-imgover
          transition-delay 1.2s
        &:nth-child(3) .news__elem-imgover
          transition-delay 1.4s
        &-content
          opacity 1
          b 0
          transition-delay .8s
  &__href
    pos absolute
    r 0
    t -104px
    color $dark
    fontify 14px 700 16px
    text-transform uppercase
    letter-spacing 0.1em
    @media $lDesktopMedium
      fontify 12px 700 14px
    @media $desktopMin
      t -66px
    @media $LandscapeMedium
      ib()
      pos relative
      t 0
      mt 40px
    &:after
      content ""
      pos absolute
      bgc alpha($dark, .25)
      w 100%
      h 1px
      b 0
      l 50%
      transform translateX(-50%)
      transition .7s width
    &.active:after,
    &:hover:after
      w 0
  &__elem
    w calc(50% - 25px)
    display flex
    flex-direction row-reverse
    justify-content space-between
    @media $desktopMin
      flex-direction column
      align-items flex-start
      justify-content flex-start
    @media $LandscapeMedium
      w 100%
    @media $LandscapeMedium
      & + &
        mt 20px
    &_wide
      w 100%
      align-items center
      mb 80px
      @media $lDesktopMedium
        mb 54px
      @media $desktopMin
        mb 34px
      @media $LandscapeMedium
        mb 0
      & ^[-1]-href
        fontify 42px 400 46px
        @media $lDesktopMax
          fontify 38px 400 42px
        @media $lDesktopMedium
          fontify 36px 400 40px
        @media $desktopMin
          fontify 30px 400 34px
        @media $LandscapeMedium
          fontify 23px 400 27px
        span
          t 9px
          @media $desktopMin
            t 6px
      & ^[-1]-date
        mb -4px
    &-side
      w calc(50% - 25px)
      @media $desktopMin
        w 100%
    &-imgover
      db()
      pt 46%
      w 0
      bgc $dark
      pos relative
      overflow hidden
      transition .7s width
      @media $LandscapeMedium
        dn()
    &-img
      position absolute
      left 0
      top 50%
      //min-height 100%
      //min-width 100%
      opacity .8
      will-change transform
      transition 7s transform, .7s opacity
      transform translate(0, -50%) scale(1)
      &:hover
        opacity 1
        transform translate(0, -50%) scale(1.08)
    &-content
      w calc(50% - 25px)
      mt -5px
      pos relative
      b -20px
      opacity 0
      transition .7s opacity, .7s bottom
      @media $desktopMin
        w 100%
        mt 15px
    &-date
      color $dark
      fontify 14px 700 21px
      text-transform uppercase
      letter-spacing .1em
      @media $lDesktopMedium
        fontify 12px 700 21px
    &-href
      color $dark
      fontify 30px 400 34px
      border-bottom 1px solid alpha($dark, .25)
      transition .5s border
      @media $lDesktopMax
        fontify 26px 400 30px
      @media $lDesktopMedium
        fontify 23px 400 27px
      span
        pos relative
        t 5px
      &:hover
        border-color transparent


  &__another
    &-row
      & + &
        mt 70px
    &-title
      color white
      fontify 14px 700 21px
      text-transform uppercase
      letter-spacing .1em
      mb 5px
      @media $lDesktopMedium
        fontify 12px 700 21px
    &-href
      color white
      fontify 30px 400 34px
      border-bottom 1px solid alpha(white, .25)
      transition .5s border
      @media $lDesktopMax
        fontify 26px 400 30px
      @media $lDesktopMedium
        fontify 23px 400 27px
      span
        pos relative
        t 5px
      &:hover
        border-color transparent
  &__inner
    &-date
      color $dark
      fontify 14px 700 21px
      text-transform uppercase
      letter-spacing .1em
      mt 40px
