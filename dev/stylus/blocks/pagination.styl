.pagination
  display flex
  justify-content flex-start
  pb 10px
  &__prev
    ib()
    w 27px
    h 25px
    mr 50px
    background url('../i/arleft_black.png') no-repeat 0 -756px
    transition .5s left, .5s opacity
    @media $desktopMin
      mr 30px
    &.disabled
      opacity .25
    &:not(.disabled):hover
      animation arrAnimation 1s steps(28)
  &__next
    ib()
    w 27px
    h 25px
    ml 50px
    background url('../i/arright_black.png') no-repeat 0 -756px
    transition .5s left, .5s opacity
    @media $desktopMin
      ml 30px
    &.disabled
      opacity .25
    &:not(.disabled):hover
      animation arrAnimation 1s steps(28)
  &__list
    display flex
  &__item
    text-align center
    color $dark
    fontify 23px 400 21px
    & + &
      ml 28px
      @media $desktopMin
        ml 18px
    &-href
      display inline-block
      vertical-align middle
      color $dark
      fontify 23px 400 21px
      border-bottom 1px solid alpha($dark, .25)
      transition .7s border
      &:not(a)
        border-bottom none
      &:hover
        border-color transparent
      ^[-1].active &
        color $green
