mixin newsElem(data)
  - var newsClass = 'news__elem'
  if (data.mainNews)
    - newsClass = 'news__elem news__elem_wide'
  article(class=newsClass)
    aside.news__elem-side
      a(href="#").news__elem-imgover
        img(src=data.img, alt="").news__elem-img
    .news__elem-content
      p.news__elem-date #{data.date}
      a(href="#").news__elem-href 
        span !{data.href}